<!--page-title-->
<div class="page-title" data-stellar-background-ratio="0.2" style="background-position: 0% 8px;">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h1>Blog</h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb">
          <li><a href="#"><i class="ion-home"></i></a></li>
          <li class="active">Blog</li>
        </ol>
      </div>
    </div>
  </div>
</div>
<!-- Page Content -->

<div class="container">
  <div class="row">
    <!-- Blog Entries Column -->
    <div class="col-md-8">
      <% @articles.each do |article| %>
          <!-- First Blog Post -->
          <h2>
            <a href="#"><%= article.title %></a>
          </h2>
          <%= image_tag(article.photo, class: 'img-responsive') %>
          <p class="lead">

          </p>

          <p>Posted <i class="ion ion-calendar"></i> <%= article.created_at.strftime('%B %d, %Y') %></p>

          <hr>
          <p><%= article.text %></p>
          <!--<p>

          </p>-->
          <%= link_to('Read more ',controller: 'blog', action: 'show', id: article.id) %>

          <hr>
      <% end %>

      <%= will_paginate @articles,:page_links=>false %>
      <!-- Pager -->
      <ul class="pager">
        <li class="previous">
          <a href="#">&larr; Older</a>
        </li>
        <li class="next">
          <a href="#">Newer &rarr;</a>
        </li>
      </ul>

    </div>

    <!-- Blog Sidebar Widgets Column -->
    <div class="col-md-4">

      <div>
        <!-- Blog Search Well -->
        <div class="well">
          <h4>Search</h4>

          <div class="input-group">
            <input type="text" class="form-control">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">
                              <i class="ion ion-ios-search"></i>
                            </button>
                        </span>
          </div>
          <!-- /.input-group -->
        </div>

        <!-- Blog Categories Well -->
        <div class="well">
          <h4>Categories</h4>

          <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled">
                <li><a href="#">Category Name</a>
                </li>
