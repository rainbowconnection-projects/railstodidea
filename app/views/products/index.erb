<div class="divided-20"></div>
<div class="container">
  <div class="col-lg-12">
    <% @products.each do |product| %>
        <div class="row">
          <div style="margin-top: 10px; margin-bottom: 10px">
            <div class="col-md-6 col-sm-12">
              <%= cl_image_tag product.photo, class: 'img-responsive', width: '400px', height: '300px' %>
            </div>
            <div class="col-md-6 col-sm-12">
              <div class="product">
                <div class="title">
                  <%= product.name %>
                </div>
                <p class="description">
                  <%= simple_format(product.short_description) %>
                </p>
                <%= link_to 'More about this product', controller: 'products', action: 'show', name: product.name %>
              </div>

            </div>
          </div>

        </div>
    <% end %>
  </div>
</div>
<div class="divided-20"></div>
