<%= link_to 'New Project', new_admin_project_path, class: 'btn btn-block btn-primary' %>
<div class="divided-20"></div>
<table class="table table-condensed">
  <thead>
  <tr>
    <th data-field="id" data-sortable="true">Id</th>
    <th data-field="photo" data-sortable="false">Photo</th>
    <th data-field="name" data-sortable="true">Name</th>
    <th data-field="description" data-sortable="true">Description</th>
    <th data-field="date" data-sortable="true">Date</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.id %></td>
        <td><%= cl_image_tag(project.photo, height: '60px', width: '60px') %></td>
        <td><%= project.name %></td>
        <td>
          <p id="text-wrapper" class="text-wrapper-admin">
            <%= project.description %>
          </p>
        </td>
        <td><%= project.date %></td>
        <td>
          <%= link_to 'Edit', edit_admin_project_path(project), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', admin_project_path(project), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
      </tr>
  <% end %>
  </tbody>
</table>
