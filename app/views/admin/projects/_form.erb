<%= simple_form_for(@project) do |f| %>
    <%= f.error_notification %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :date, as: :date %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit,@project.new_record? ? 'Add Project' : 'Update Project', class: 'btn btn-success btn-block btn-medium' %>
<% end %>