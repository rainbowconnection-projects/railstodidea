<%= simple_form_for([:admin ,@gallery])  do |f| %>
    <%= f.input :name, label: 'Name' %>
    <%= f.association :product, label: 'Product' %>
    <%= f.button :submit, @gallery.new_record? ? 'Add Gallery' : 'Update Gallery', class: 'btn btn-success btn-block btn-medium' %>
<% end %>

<div class="divided-20"></div>