<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><span class="fa fa-home"></span></a></li>
      <li class="active">Events</li>
    </ol>
  </div>

  <div style="padding: 10px">
    <div class="row">
      <%= link_to 'New Event', new_admin_event_path, :class => 'btn btn-medium btn-primary pull-right' %>
    </div>
    <div class="margin-bottom-20"></div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-condensed">
          <thead>
          <tr>
            <th data-field="id" data-sortable="true">Id</th>
            <th data-field="photo" data-sortable="false">Photo</th>
            <th data-field="event" data-sortable="true">Event</th>
            <th data-field="description" data-sortable="true">Description</th>
            <th data-field="date" data-sortable="date">Date</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @events.each do |event| %>
              <tr>
                <td><%= event.id %></td>
                <td><%= image_tag(event.photo, height: '60px', width: '60px') %></td>
                <td><%= event.event_name %></td>
                <td>
                  <p id="text-wrapper" class="text-wrapper-admin">
                    <%= event.description %>
                  </p>

                </td>
                <td>
                  <%= link_to 'Edit', edit_admin_event_path(event), class: 'btn btn-primary btn-small' %>
                  <%= link_to 'View', admin_event_path(event), class: 'btn btn-success btn-small' %>
                  <%= link_to 'Delete', admin_event_path(event),class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>


</div>    <!--/.main-->