<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><span class="fa fa-home"></span></a></li>
      <li class="active">Photos</li>
    </ol>
  </div>

  <div style="padding: 10px">
    <div class="row">
      <%= link_to 'Add Photo', new_admin_photo_path, :class => 'btn btn-medium btn-primary pull-right' %>
    </div>
    <div class="margin-bottom-20"></div>
    <div class="row">
      <div class="col-lg-12">
        <table data-toggle="table" data-classes="table table-hover table-condensed"
               data-striped="true">
          <thead>
          <tr>
            <th data-field="photo" data-sortable="false">Photo</th>
            <th data-field="gallery" data-sortable="true">Gallery</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @photos.each do |photo| %>
              <tr>
                <td><%= cl_image_tag photo.photo, height: '80px' %></td>
                <td><%= photo.gallery.name %></td>
                <td>
                  <%= link_to 'Edit', edit_admin_photo_path(photo), class: 'btn btn-primary btn-small' %>
                  <%= link_to 'View', admin_photo_path(photo), class: 'btn btn-success btn-small' %>
                  <%= link_to 'Delete', admin_photo_path(photo), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>    <!--/.main-->