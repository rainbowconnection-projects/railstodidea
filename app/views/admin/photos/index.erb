<%= link_to 'Add Photo', new_admin_photo_path, class:'btn btn-block btn-primary' %>
<div class="divided-20"></div>
<table data-toggle="table" data-classes="table table-hover table-condensed"
       data-striped="true">
  <thead>
  <tr>
    <th data-field="photo" data-sortable="false">Photo</th>
    <th data-field="gallery" data-sortable="true">Gallery</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @photos.each do |photo| %>
      <tr>
        <td><%= cl_image_tag photo.photo, height: '80px' %></td>
        <td><%= photo.gallery.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_photo_path(photo), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', admin_photo_path(photo), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>