<%= simple_form_for([:admin, @testimonial]) do |f| %>
    <%= f.error_notification %>
    <label>Designation</label>
    <%= f.input_field :designation, as: :text %>
    <label>Testimonial</label>
    <%= f.input_field :text, as: :text %>
    <%= f.input :name %>
    <label>Photo</label>
    <%= f.input_field :photo, as: :file %>
    <%= f.button :submit, @testimonial.new_record? ? 'Add Testimonial' : 'Update Testimonial', class: 'btn btn-success btn-block btn-medium' %>
<% end %>

<div class="divided-20"></div>