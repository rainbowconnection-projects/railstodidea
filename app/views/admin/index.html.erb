<div class="row">
  <div class="col-md-3 col-sm-6">
    <div class="card card-inverse card-success">
      <div class="card-block bg-success">
        <div class="rotate">
          <i class="fa fa-globe fa-5x"></i>
        </div>
        <h6 class="text-uppercase">Projects</h6>
        <h1 class="display-1"><%= @projects.count %></h1>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div class="card card-inverse card-danger">
      <div class="card-block bg-danger">
        <div class="rotate">
          <i class="fa fa-list fa-4x"></i>
        </div>
        <h6 class="text-uppercase">Posts</h6>
        <h1 class="display-1"><%= @articles.count %></h1>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div class="card card-inverse card-info">
      <div class="card-block bg-info">
        <div class="rotate">
          <i class="fa fa-file-photo fa-5x"></i>
        </div>
        <h6 class="text-uppercase">Photos</h6>
        <h1 class="display-1"><%= @photos.count %></h1>
      </div>
    </div>
  </div>
  <div class="col-md-3 col-sm-6">
    <div class="card card-inverse card-warning">
      <div class="card-block bg-warning">
        <div class="rotate">
          <i class="fa fa-microphone fa-5x"></i>
        </div>
        <h6 class="text-uppercase">Testimonials</h6>
        <h1 class="display-1"><%= @testimonials.count %></h1>
      </div>
    </div>
  </div>
</div>
<!--/row-->



