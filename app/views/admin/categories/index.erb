  <ul class="nav menu">
    <%= render 'admin/shared/links' %>
  </ul>
</div><!--/.sidebar-->

<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><span class="fa fa-home"></span></a></li>
      <li class="active">categorys</li>
    </ol>
  </div>

  <div style="padding: 10px">
    <div class="row">
      <%= link_to 'New category', {:controller => 'admin', :action => 'new_category'}, :class => 'btn btn-medium btn-primary pull-right' %>
    </div>
    <div class="margin-bottom-20"></div>
    <div class="row">
      <div class="col-lg-12">
        <table class="table table-striped table-condensed">
          <thead>
          <tr>
            <th data-field="title" data-sortable="true">Name</th>
            <th data-field="category" data-sortable="true">Name</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td>

                  <p id="text-wrapper" class="text-wrapper-admin">
                    <%= category.description %>
                  </p>

                </td>
                <td>
                  <%= link_to 'Edit', {controller: 'admin', action: 'edit_category', id: category.id}, class: 'btn btn-primary btn-small' %>
                  <%= link_to 'View', {controller: 'blog', action: 'show', id: category.id}, class: 'btn btn-success btn-small' %>
                  <%= link_to 'Delete', {controller: 'admin', action: 'destroy_category', id: category.id},class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>    <!--/.main-->