<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><span class="fa fa-home"></span></a></li>
      <li class="active">Categories</li>
    </ol>
  </div>

  <div style="padding: 10px">
    <div class="row">
      <%= link_to 'New Category', new_admin_category_path, :class => 'btn btn-medium btn-primary pull-right' %>
    </div>
    <div class="margin-bottom-20"></div>
    <div class="row">
      <div class="col-lg-12">
        <table data-toggle="table" data-classes="table table-hover table-condensed"
               data-striped="true">
          <thead>
          <tr>
            <th data-field="id" data-sortable="true">Id</th>
            <th data-field="name" data-sortable="true">Name</th>
            <th data-field="description" data-sortable="false">Description</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @categories.each do |category| %>
              <tr>
                <td><%= category.id %></td>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td>
                  <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-primary btn-small' %>
                  <%= link_to 'View', admin_category_path(category), class: 'btn btn-success btn-small' %>
                  <%= link_to 'Delete', admin_category_path(category), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>    <!--/.main-->