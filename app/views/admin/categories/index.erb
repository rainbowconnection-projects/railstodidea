<%= link_to 'New Category', new_admin_category_path, class: 'btn btn-block btn-primary' %>
<div class="divided-20"></div>
<table data-toggle="table" data-classes="table table-hover table-condensed"
       data-striped="true">
  <thead>
  <tr>
    <th data-field="id" data-sortable="true">Id</th>
    <th data-field="name" data-sortable="true">Name</th>
    <th data-field="description" data-sortable="false">Description</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', admin_category_path(category), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
