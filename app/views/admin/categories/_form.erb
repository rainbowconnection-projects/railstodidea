<%= simple_form_for ([:admin,@category]) do |f| %>
    <%= f.input :name, label: 'Name' %>
    <%= f.input :description, label: 'Description', as: :text %>
    <%= f.button :submit, @category.new_record? ? 'Add Category' : 'Update Category', class: 'btn btn-success btn-block btn-medium' %>
<% end %>