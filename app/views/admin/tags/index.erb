<%= link_to 'New Tag', new_admin_tag_path, class: 'btn btn-block btn-primary' %>
<div class="divided-20"></div>
<table data-toggle="table" data-classes="table table-hover table-condensed"
       data-striped="true">
  <thead>
  <tr>
    <th data-field="id" data-sortable="true">Id</th>
    <th data-field="name" data-sortable="false">Name</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.id %></td>
        <td><%= tag.name %></td>
        <td>
          <%= link_to 'Edit', edit_admin_tag_path(tag), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Delete', admin_tag_path(tag), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<!--/.main-->