<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
  <div class="row">
    <ol class="breadcrumb">
      <li><a href="#"><span class="fa fa-home"></span></a></li>
      <li class="active">Products</li>
    </ol>
  </div>

  <div style="padding: 10px; margin-bottom: 20px">
    <div class="row">
      <%= link_to 'New Product', new_admin_product_path, :class => 'btn btn-medium btn-primary' %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <table id="table"
               data-toggle="table"
               data-height="550"
               data-pagination="true"
               data-page-size="5"
               data-page-list="[5,8,10]"
               data-pagination-first-text="First"
               data-pagination-pre-text="Previous"
               data-pagination-next-text="Next"
               data-pagination-last-text="Last">
          <thead>
          <tr>
            <th data-field="id" data-sortable="true">Id</th>
            <th data-field="photo" data-sortable="false">Photo</th>
            <th data-field="name" data-sortable="true">Name</th>
            <th data-field="description" data-sortable="true">Description</th>
            <th></th>
          </tr>
          </thead>
          <tbody>
          <% @products.each do |product| %>
              <tr>
                <td><%= product.id %></td>
                <td><%= cl_image_tag(product.photo, height: '60px', width: '60px') %></td>
                <td><%= product.name %></td>
                <td>
                  <div style="overflow-y: auto">
                    <p>
                      <%= simple_format product.description %>
                    </p>
                  </div>
                </td>

                <td>
                  <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-primary btn-small' %>
                  <%= link_to 'View', product, class: 'btn btn-success btn-small' %>
                  <%= link_to 'Delete', admin_product_path(product), class: 'btn btn-danger btn-sm', method: :delete, data: {confirm: 'Are you sure?'} %>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>


</div>    <!--/.main-->